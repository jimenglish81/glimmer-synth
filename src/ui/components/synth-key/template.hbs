<li
  class="synth-key {{if isActive (concat "synth-key--" @key.color "--active")}} {{if @key.indent "synth-key--indent"}} synth-key--{{@key.color}}"
  onmousedown={{action start}}
  onmouseup={{action stop}}
  onmouseout={{action stop}}

  ontouchstart={{action start}}
  ontouchend={{action stop}}
  ontouchcancel={{action stop}}

  onpointerdown={{action start}}
  onpointerup={{action stop}}
  onpointerleave={{action stop}}

  title={{concat keyName " (" @key.shortcut ")"}}>
  <span class="synth-key__help">
    {{#if @showTip}}
      {{@key.shortcut}}
    {{/if}}
  </span>
</li>
